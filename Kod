images = [A, stop, Ą, stop, B, stop, C, stop, Ć, stop, D, stop, E, stop, Ę, stop, F, stop, G, stop, H, stop, I, stop, J, stop, K, stop, L, stop,
 Ł, stop, M, stop ,N, stop, Ń, stop ,O, stop, Ó, stop, P ,stop, R, stop, S, stop, Ś, stop, T, stop, U, stop, W, stop, X, stop, Y, stop, Z, stop, Ż,stop, Ź, stop,]

index = 0
image = images[index]

CHANGE_IMAGE_EVENT = pg.USEREVENT + 1
pg.time.set_timer(CHANGE_IMAGE_EVENT, 1000)

done = False
while not done:
    with open("moje_dane.txt","a") as myfile:
        myfile.write("start\n")
    for event in pg.event.get():
        if event.type == pg.QUIT:
            done = True
        elif event.type == CHANGE_IMAGE_EVENT:
            index += 1
            index %= len(images)
            image = images[index]  # Alternatively load the next image here.

    screen.fill(BG_COLOR)

    screen.blit(image, (175, 175))
    pg.display.flip()
    clock.tick(30)

pg.quit()
